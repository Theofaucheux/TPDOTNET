@model Modele.Faucheux.Entities.Classe

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Classe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomEtablissement)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomEtablissement)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Niveau)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Niveau)
        </dd>

    </dl>

    <h4>Eleves : </h4>

    <table class="table">
        <tr>
            <th>
                Etablissement
            </th>
            <th>
                Nom
            </th>
            <th>
                Prenom
            </th>
            <th>
                Date de naissance
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.lEleve)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Classe.NomEtablissement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateNaissance)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClasseID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
